<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kontrakanelite.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.kontrakanelite.movieapp.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.kontrakanelite.movieapp.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.SearchResultActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <receiver
            android:name=".service.AlarmReceiver"
            android:enabled="true"
            android:exported="true"/>
        <service
            android:name=".service.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".widget.FavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_widget_info" />
        </receiver>
        <provider
            android:authorities="com.kontrakanelite.movieapp"
            android:name=".MovieProvider"
            android:exported="true"
            android:readPermission="com.kontrakanelite.movieapp.READ_DATABASE"
            android:writePermission="com.kontrakanelite.movieapp.WRITE_DATABASE" />

        <activity
            android:name=".activity.TvShowFavoriteActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.FavoriteMovieActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.SettingActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DetailFilmActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>